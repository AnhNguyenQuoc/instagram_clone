    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "col s6 offset-s3 login"}) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'validate' %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'validate' %>
        </div>
      </div>

      <div class="actions">
        <%= button_tag type: 'submit', class: "btn waves-effect waves-light blue", style: "width: 100%" do %>
          Login
        <% end %>
      </div>
      <h2 class="text-between-line"><span>OR</span></h2>
