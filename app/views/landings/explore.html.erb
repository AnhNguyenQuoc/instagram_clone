<div>
  <%= render partial: "shared/header" %>
</div>

<div class="container">
  <h2 class="center materialize-red-text">Explore</h2>
  <ul class="collection">
    <% if @users.length == 0 %>
      <h5 class="center materialize-red-text">You are following all of them</h5>
    <% end %>
    <% @users.each do |user| %>
      <li class="collection-item avatar">
        <%= image_tag user.avatar, class: "circle" %>
        <span class="title"><%= username_account(user.email) %></span>
        <%= link_to show_user_path(user), class: "secondary-content" do %>
          <i class="material-icons">send</i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>